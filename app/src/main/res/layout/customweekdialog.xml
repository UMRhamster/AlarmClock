        <com.whut.umrhamster.myapplication.CustomUI.SmoothCheckBox
            android:id="@+id/customWeekDialog_sunday_scb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            app:stroke_width="2dp"
            app:color_checked="@color/colorAccent"/>
    </RelativeLayout>
    <!--分割线-->
    <View
        android:id="@+id/customWeekDialog_viewHorizontal"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dbdbdb"
        android:layout_below="@id/customWeekDialog_sunday_rl"/>
    <LinearLayout
        android:id="@+id/customWeekDialog_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/customWeekDialog_viewHorizontal">
        <TextView
            android:id="@+id/customWeekDialog_cancel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/newclock_set_bg"
            android:padding="16dp"/>
        <TextView
            android:id="@+id/customWeekDialog_ok_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/ok"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/newclock_set_bg"
            android:padding="16dp"/>
    </LinearLayout>
    <View
        android:layout_width="0.5dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#dbdbdb"
        android:layout_alignTop="@id/customWeekDialog_viewHorizontal"
        android:layout_alignBottom="@id/customWeekDialog_ll"/>
