<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/whiteColor"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <!--标题-->
    <TextView
        android:id="@+id/customWeekDialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/custom"
        android:textSize="17sp"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"/>
    <!--分割线-->
    <View
        android:id="@+id/weekOne"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dbdbdb"
        android:layout_below="@id/customWeekDialog_title"/>
    <!--每周一-->
    <RelativeLayout
        android:id="@+id/customWeekDialog_monday_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/newclock_set_bg"
        android:layout_below="@id/weekOne">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/monday"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_centerVertical="true"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="16dp"/>
        <com.whut.umrhamster.myapplication.CustomUI.SmoothCheckBox
            android:id="@+id/customWeekDialog_monday_scb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            app:stroke_width="2dp"
            app:color_checked="@color/colorAccent"/>
    </RelativeLayout>
    <!--分割线-->
    <View
        android:id="@+id/weekTwo"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dbdbdb"
        android:layout_marginStart="16dp"
        android:layout_below="@id/customWeekDialog_monday_rl"/>
    <!--每周二-->
