<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/list_roughTime_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/morning_chinese"
        android:textSize="12sp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"/>
    <TextView
        android:id="@+id/list_exactTime_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="08:00"
        android:textSize="22sp"
        android:layout_toEndOf="@id/list_roughTime_tv"
        android:layout_alignBaseline="@id/list_roughTime_tv"/>
    <TextView
        android:id="@+id/list_repetition_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_roughTime_tv"
        android:layout_alignStart="@id/list_roughTime_tv"
        android:text="每天"
        android:textSize="12sp"
        />

    <Switch
        android:id="@+id/list_control_sh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/list_roughTime_tv"/>
</RelativeLayout>